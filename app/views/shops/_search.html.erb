<h1>Pesquisar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag shops_path, :method => 'get' do %>
    <p>

      <%= text_field_tag :name, params[:name] %>

      <%= submit_tag "Pesquisar", :name => nil, class: "btn btn-large btn-primary" %>
      </p>

    <% end %>

    <p>Nova Loja? <%= link_to "Nova Loja", registo_path %></p>
  </div>
</div>