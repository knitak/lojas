<% provide(:title, 'Nova Loja') %>
<h1>Nova Loja</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@shop) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :postalcode %>
      <%= f.text_field :postalcode %>

      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all(:order =>'category'),  :id, :category, :include_blank => true %>

      <%= f.label :city %>
      <%= f.collection_select :city_id, City.all(:order =>'city'),  :id, :city, :include_blank => true %>

      <%= f.submit "Criar Nova Loja", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>