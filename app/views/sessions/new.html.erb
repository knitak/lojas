<% provide(:title, "Pesquisar") %>
<h1>Pesquisar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: pesquisa_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Pesquisar", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Nova Loja? <%= link_to "Nova Loja", registo_path %></p>
  </div>
</div>