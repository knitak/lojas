<h1>Pesquisar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag shops_path, :method => 'get' do %>
    <p><%= text_field_tag :search, params[:search] %>

      <%= select :search, params[:search], ([["Restaurante"],["Vestuario"],["Banco"]])%>

      <%= submit_tag "Pesquisar",:category => nil, class: "btn btn-large btn-primary" %>
    </p>

    <% end %>

    <p><%= link_to "Nova Loja", registo_path %></p>
    <p><%= link_to "Nova Categoria", categories_path %></p>
  </div>
</div>