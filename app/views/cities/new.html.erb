<% provide(:title, 'Nova Cidade') %>
<h1>Nova Cidade</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@city) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.submit "Criar Nova Cidade", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
